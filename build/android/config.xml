<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns="http://www.w3.org/ns/widgets"
        xmlns:gap="http://phonegap.com/ns/1.0"
        id="de.tursics.nameyourbabe"
        version="3.2"
        versionCode="32">

	<!-- Essential property (Blackberry only supports latin character) -->
	<name>Name your babe</name>
	<name xml:lang="de">Baby benamsen</name>

	<!-- Essential property (Blackberry should keep it at a reasonable length) -->
	<description>Name your babe - The encyclopedia of names, to find THE name for your baby.</description>

	<!-- Essential property -->
	<author href="http://www.tursics.de" email="thomas@tursics.de">
		Thomas Tursics
	</author>

	<!-- Default icon -->
	<icon src="icon.png" />
	<gap:splash src="splash.png" />

	<!-- Android -->
	<gap:platform name="android" />
	<!--
		Version		Codename			API	Distribution
		4.0.3-4.0.4	Ice Cream Sandwich	15	12.3%
		4.1.x		Jelly Bean			16	29.0%
		4.2.x		Jelly Bean			17	19.1%
		4.3			Jelly Bean			18	10.3%
		4.4			KitKat				19	13.6%
	-->
	<preference name="android-minSdkVersion" value="10" />
	<!-- <preference name="android-maxSdkVersion" value="15" /> -->
	<!-- <preference name="android-targetSdkVersion" value="11" /> -->
	<!-- <preference name="android-installLocation" value="auto" /> -->
	<!-- <preference name="android-windowSoftInputMode" value="stateVisible|adjustResize" /> -->
	<preference name="splash-screen-duration" value="200"/>
	<icon src="art/icon-android-36.png" gap:platform="android" gap:qualifier="ldpi" />
	<icon src="art/icon-android-48.png" gap:platform="android" gap:qualifier="mdpi" />
	<icon src="art/icon-android-72.png" gap:platform="android" gap:qualifier="hdpi" />
	<icon src="art/icon-android-96.png" gap:platform="android" gap:qualifier="xhdpi" />
	<gap:splash src="splash.png" gap:platform="android" gap:qualifier="ldpi" />
	<gap:splash src="splash.png" gap:platform="android" gap:qualifier="mdpi" />
	<gap:splash src="splash.png" gap:platform="android" gap:qualifier="hdpi" />
	<gap:splash src="splash.png" gap:platform="android" gap:qualifier="xhdpi" />
	<gap:splash src="splash.png" gap:platform="android" gap:qualifier="xxhdpi" />

	<!-- Useful property -->
	<preference name="phonegap-version" value="3.3.0" />
	<preference name="orientation" value="default" />
	<!-- <preference name="fullscreen" value="true" /> -->
	<preference name="webviewbounce" value="false" />
	<preference name="permissions" value="none" />
	<!-- <preference name="stay-in-webview" value="false" /> -->
	<!-- <preference name="show-splash-screen-spinner" value="false" /> -->
	<!-- <preference name="load-url-timeout" value="15000" /> -->

	<feature name="http://api.phonegap.com/1.0/network"/>

	<access origin="*" />
	<!-- <access origin="*" browserOnly="true" /> -->
</widget>
