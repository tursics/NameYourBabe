<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns="http://www.w3.org/ns/widgets"
        xmlns:gap="http://phonegap.com/ns/1.0"
        id="de.tursics.nameyourbabe"
        version="3.1.2"
        versionCode="31">

	<!-- Essential property (Blackberry only supports latin character) -->
	<name>Name your babe</name>
	<name xml:lang="de">Baby benamsen</name>

	<!-- Essential property (Blackberry should keep it at a reasonable length) -->
	<description>Name your babe - The encyclopedia of names, to find THE name for your baby.</description>

	<!-- Essential property -->
	<author href="http://www.tursics.de" email="thomas@tursics.de">
		Thomas Tursics
	</author>

	<!-- Default icon -->
	<icon src="icon.png" />
	<gap:splash src="splash.png" />

	<!-- iOS icons -->
	<gap:platform name="ios" />
	<preference name="target-device" value="universal" />
	<preference name="prerendered-icon" value="true" />
	<!-- <preference name="ios-statusbarstyle" value="black-opaque" /> -->
	<!-- <preference name="detect-data-types" value="true" /> -->
	<!-- <preference name="exit-on-suspend" value="false" /> -->
	<icon src="art/icon-ios-57.png" gap:platform="ios" width="57" height="57" />
	<icon src="art/icon-ios-72.png" gap:platform="ios" width="72" height="72" />
	<icon src="art/icon-ios-114.png" gap:platform="ios" width="114" height="114" />
	<icon src="art/icon-ios-144.png" gap:platform="ios" width="144" height="144" />
	<!-- The bundle does not contain an app icon for iPhone / iPod Touch of exactly '120x120' pixels, in .png format. -->
	<!-- The bundle does not contain an app icon for iPad of exactly '76x76' pixels, in .png format. -->
	<!-- The bundle does not contain an app icon for iPad of exactly '152x152' pixels, in .png format. -->
	<gap:splash src="splash.png" gap:platform="ios" width="320" height="480" />
	<gap:splash src="splash.png" gap:platform="ios" width="640" height="960" />
	<gap:splash src="splash.png" gap:platform="ios" width="640" height="1136" />
	<gap:splash src="splash.png" gap:platform="ios" width="768" height="1004" />
	<gap:splash src="splash.png" gap:platform="ios" width="1024" height="748" />
	<gap:splash src="splash.png" gap:platform="ios" width="1536" height="2008" />
	<gap:splash src="splash.png" gap:platform="ios" width="2048" height="1496" />

	<!-- Android -->
	<gap:platform name="android" />
	<!--
		Version		Codename			API	Distribution
======>	2.3.3-2.3.7	Gingerbread			10	17.8%
		3.2			Honeycomb			13	0.1%        <--- tablet based
		4.0.3-4.0.4	Ice Cream Sandwich	15	14.3%
		4.1.x		Jelly Bean			16	34.4%
		4.2.x							17	18.1%       <--- Empfehlung TZI
		4.3								18	8.9%
		4.4			KitKat				19	5.3%
	-->
	<preference name="android-minSdkVersion" value="10" />
	<!-- <preference name="android-maxSdkVersion" value="15" /> -->
	<!-- <preference name="android-targetSdkVersion" value="11" /> -->
	<!-- <preference name="android-installLocation" value="auto" /> -->
	<!-- <preference name="android-windowSoftInputMode" value="stateVisible|adjustResize" /> -->
	<preference name="splash-screen-duration" value="200"/>
	<icon src="art/icon-android-36.png" gap:platform="android" gap:density="ldpi" />
	<icon src="art/icon-android-48.png" gap:platform="android" gap:density="mdpi" />
	<icon src="art/icon-android-72.png" gap:platform="android" gap:density="hdpi" />
	<icon src="art/icon-android-96.png" gap:platform="android" gap:density="xhdpi" />
	<gap:splash src="splash.png" gap:platform="android" gap:density="ldpi" />
	<gap:splash src="splash.png" gap:platform="android" gap:density="mdpi" />
	<gap:splash src="splash.png" gap:platform="android" gap:density="hdpi" />
	<gap:splash src="splash.png" gap:platform="android" gap:density="xhdpi" />

	<!-- Blackberry (icon must be smaller then 16kb) -->
	<gap:platform name="blackberry" />
	<!-- <preference name="disable-cursor" value="true" /> -->
	<!-- <icon src="art/icon-blackberry.png" gap:platform="blackberry" /> -->
	<!-- <icon src="art/icon-blackberry-hover.png" gap:platform="blackberry" gap:state="hover"/> -->
	<gap:splash src="splash.png" gap:platform="blackberry" />

	<!-- Useful property -->
	<preference name="phonegap-version" value="3.1.0" />
	<preference name="orientation" value="default" />
	<!-- <preference name="fullscreen" value="true" /> -->
	<preference name="webviewbounce" value="false" />
	<preference name="permissions" value="none" />
	<!-- <preference name="stay-in-webview" value="false" /> -->
	<!-- <preference name="show-splash-screen-spinner" value="false" /> -->
	<!-- <preference name="load-url-timeout" value="15000" /> -->

	<feature name="http://api.phonegap.com/1.0/network"/>

	<access origin="*" />
	<!-- <access origin="*" browserOnly="true" /> -->
</widget>
