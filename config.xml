<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns="http://www.w3.org/ns/widgets"
        xmlns:gap="http://phonegap.com/ns/1.0"
        id="de.tursics.nameyourbabe"
        version="3.4"
        versionCode="34">

	<!-- Essential property (Blackberry only supports latin character) -->
	<name>Name your babe</name>
	<name xml:lang="de">Baby benamsen</name>

	<!-- Essential property (Blackberry should keep it at a reasonable length) -->
	<description>Name your babe - The encyclopedia of names, to find THE name for your baby.</description>

	<!-- Essential property -->
	<author href="http://www.tursics.de" email="thomas@tursics.de">
		Thomas Tursics
	</author>

	<!-- Default icon -->
	<icon src="icon.png" />
	<gap:splash src="splash.png" />

	<!-- iOS icons -->
	<gap:platform name="ios" />
	<preference name="target-device" value="universal" />
	<preference name="prerendered-icon" value="true" />
	<!-- <preference name="ios-statusbarstyle" value="black-opaque" /> -->
	<!-- <preference name="detect-data-types" value="true" /> -->
	<!-- <preference name="exit-on-suspend" value="false" /> -->
	<!-- iOS 6.1 -->
	<icon src="art/icon-ios-57.png" gap:platform="ios" width="57" height="57" />
	<icon src="art/icon-ios-72.png" gap:platform="ios" width="72" height="72" />
	<icon src="art/icon-ios-114.png" gap:platform="ios" width="114" height="114" />
	<icon src="art/icon-ios-144.png" gap:platform="ios" width="144" height="144" />
	<!-- iOS 7.0 -->
	<icon src="art/icon-ios-60.png" gap:platform="ios" width="60" height="60" />
	<icon src="art/icon-ios-76.png" gap:platform="ios" width="76" height="76" />
	<icon src="art/icon-ios-120.png" gap:platform="ios" width="120" height="120" />
	<icon src="art/icon-ios-152.png" gap:platform="ios" width="152" height="152" />
	<gap:splash src="splash.png" gap:platform="ios" width="320" height="480" />
	<gap:splash src="splash.png" gap:platform="ios" width="640" height="960" />
	<gap:splash src="splash.png" gap:platform="ios" width="640" height="1136" />
	<gap:splash src="splash.png" gap:platform="ios" width="768" height="1024" />
	<gap:splash src="splash.png" gap:platform="ios" width="1024" height="768" />
	<gap:splash src="splash.png" gap:platform="ios" width="1536" height="2048" />
	<gap:splash src="splash.png" gap:platform="ios" width="2048" height="1536" />

	<!-- Useful property -->
	<preference name="phonegap-version" value="3.7.0" />
	<preference name="orientation" value="default" />
	<!-- <preference name="fullscreen" value="true" /> -->
	<preference name="webviewbounce" value="false" />
	<preference name="permissions" value="none" />
	<!-- <preference name="stay-in-webview" value="false" /> -->
	<!-- <preference name="show-splash-screen-spinner" value="false" /> -->
	<!-- <preference name="load-url-timeout" value="15000" /> -->

	<feature name="http://api.phonegap.com/1.0/network"/>

	<access origin="*" />
	<!-- <access origin="*" browserOnly="true" /> -->
</widget>
